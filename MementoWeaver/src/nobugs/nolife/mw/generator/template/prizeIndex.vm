<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="content-style-type" content="text/css">
    <meta http-equiv="content-script-type" content="text/javascript">
    <title>${title}</title>
    <style type='text/css'>
      @import '../js/dijit/themes/tundra/tundra.css';
      @import '../js/dojo/resources/dojo.css';
      @import '../css/hpcms.css';
    </style>
    <script type='text/javascript' src='../js/dojo/dojo.js' djConfig='parseOnLoad: true'></script>
    <script type='text/javascript' src='../js/headline.js'></script>
    <script type='text/javascript' src='../js/navmenu.js'></script>

    <script type='text/javascript'>
      dojo.require('dojo.parser');
      dojo.require('dojo.fx');
      dojo.require('dojox.fx.easing');

      function setup_slideTo() {
        animation = dojo.fx.chain(
          [ dojo.fx.slideTo({
              node: "moving-track",
              top: 100,
              left: 300,
              unit: "px",
              duration: 5000
            }),
            dojo.fadeIn({
              node: "prize",
              duration: 2000
            }),
            dojo.fadeIn({
              node: "prize-message",
              duration: 2000
            }),
            dojo.fx.slideTo({
              node: "moving-track",
              top: 100,
              left: -100,
              unit: "px",
              duration: 3000
            }),
            dojo.fx.slideTo({
              node: "moving-track",
              top: 100,
              left: -100,
              unit: "px",
              duration: 1000
            }),
            dojo.fx.slideTo({
              node: "moving-track",
              top: 100,
              left: 300,
              unit: "px",
              duration: 5000
            })
          ]);
      }

      function slideTo() {
        animation.easing = dojox.fx.easing.cubicOut;
        animation.play();
      }

      var animation;

      dojo.addOnLoad(function(){headlinemenu_load('../chunk/headlineMenu1.xml')});
      dojo.addOnLoad(function(){navmenu_load('menu.xml')});
      dojo.addOnLoad(setup_slideTo);
      dojo.addOnLoad(function(){dojo.parser.parse();});
      dojo.addOnLoad(slideTo);
    </script>
  </head>

  <body class="tundra body-prizes">
    <div id="headline_menu">
      <!-- headlinemenu_load() でここにヘッドラインメニューが埋め込まれる。 -->
    </div>
    <div id="contents_base">
      <div id="leftpane_menu">
        <!-- ナビゲーションメニュー start -->
        <div class="leftmenu">
          <ul id="navmenu">
          <!-- navmenu_load() でここにナビゲーションメニューが埋め込まれる。 -->
          </ul>
          <br />
          <ul>
            <li><a href="#" onclick="location.reload()">アニメを最初から</a></li>
            <li><a href="../index.html">ホームに戻る</a></li>
          </ul>
        </div>
        <!-- ナビゲーションメニュー end -->
      </div>
      <div id="contents_container">
        <h1>ヒロコの勝ち組人生</h1>
        <div id="moving-track"></div>
        <div id="prize"></div>
        <div id="prize-message"></div>
      </div>
    </div>
  </body>
</html>
